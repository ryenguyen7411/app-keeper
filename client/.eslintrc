{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2016,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "indent": "off",
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "semi": "off",
    "for-direction": "error",
    "no-console": "warn",
    "no-unused-vars": "warn",
    "react/prop-types": "off"
  }
}
